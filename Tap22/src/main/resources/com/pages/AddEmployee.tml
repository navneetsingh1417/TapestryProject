<html t:type="layout" title="Tap22 com.example"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">
<head>
<style>

.formContainer{
                margin: 20px 0;
                padding: 14px;
                border: 1px solid #ddd;
                border-radius: 6px;
                -webkit-border-radius: 6px;
                -mox-border-radius: 6px;
}
</style>
</head>
<body class="container">

	<div class="formContainer">
	
		<t:form t:id="add" class="form-horizontal">
		
			<div class="form-group">
				<t:label for="id" class="col-sm-2"/>
				<div class="col-sm-4">
					<t:textfield t:id="id" t:value="id" validate="required"/>
				</div>
			</div>
			
			<div class="form-group">
				<t:label for="age" class="col-sm-2"/>
				<div class="col-sm-4">
					<t:textfield t:id="age" t:value="age" validate="required"/>
				</div>
			</div>
			
			<div class="form-group">
				<t:label for="name" class="col-sm-2"/>
				<div class="col-sm-4">
					<t:textfield t:id="name" t:value="name" validate="required"/>
				</div>
			</div>
			
			<div class="form-group">
				<t:label for="address" class="col-sm-2"/>
				<div class="col-sm-4">
					<t:textfield t:id="address" t:value="address" validate="required"/>
				</div>
			</div>
			
			<div class="form-group">
				<t:label for="username" class="col-sm-2"/>
				<div class="col-sm-4">
					<t:textfield t:id="username" t:value="username" validate="required"/>
				</div>
			</div>
			
			<div class="form-group">
				<t:label for="password" class="col-sm-2"/>
				<div class="col-sm-4">
					<t:passwordfield t:id="password" t:value="password" validate="required"/>
				</div>
			</div>
			
			<div class="form-group">
	                <div class="col-sm-4 col-sm-offset-2">
	                    <t:submit/>
	                </div>
	        </div>
	            
		</t:form>
		
	</div>
	
</body>



</html>